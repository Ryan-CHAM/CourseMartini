<%= form_for(@comment) do |f| %>
	



<p>
<div class="btn-group btn-group-toggle" data-toggle="buttons">
 	Grade: 
	<div class="btn-group mr-2" role="group" aria-label="First group">
  		<label class="btn btn-secondary active">
    		<input type="radio" name="comment[gpa]" value="4.0" id="option1" autocomplete="off" checked> A
  		</label>
  		<label class="btn btn-secondary">
    		<input type="radio" name="comment[gpa]" value="3.7" id="option2" autocomplete="off"> A-
  		</label>
  		<label class="btn btn-secondary">
    		<input type="radio" name="comment[gpa]" value="3.3" id="option3" autocomplete="off"> B+
  		</label>
		<label class="btn btn-secondary">
    		<input type="radio" name="comment[gpa]" value="3.0" id="option3" autocomplete="off"> B
  		</label>
		<label class="btn btn-secondary">
    		<input type="radio" name="comment[gpa]" value="2.7" id="option3" autocomplete="off"> B-
	 	 </label>
		<label class="btn btn-secondary">
	    	<input type="radio" name="comment[gpa]" value="2.3" id="option3" autocomplete="off"> C+
  		</label>
		<label class="btn btn-secondary">
    		<input type="radio" name="comment[gpa]" value="2.0" id="option3" autocomplete="off"> C
  		</label>
		<label class="btn btn-secondary">
		    <input type="radio" name="comment[gpa]" value="1.7" id="option3" autocomplete="off"> C-
		</label>
