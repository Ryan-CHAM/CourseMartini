<% if notice %>
<div class="alert alert-success" role="alert">
  <p id="notice"><%= notice %></p>
</div>
<% end %>

<h1>Courses Database (Administrator's View)</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Code</th>
      <th>Name</th>
      <th>Subject</th>
      <th>Faculty</th>
      <th>Description</th>
      
      <th>Workload</th>
      <th>Difficulty</th>
      <th>Quality</th>
      <th>Usefulness</th>
      <th>GPA</th>
      <th>Overall</th>
      <th>Num_comments</th>

      <th>Textbooks</th>
      <th>Website</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.id %></td>
        <td><%= course.code %></td>
        <td><%= course.name %></td>
        <td><%= course.subject %></td>
        <td><%= course.faculty %></td>
        <td><%= course.description %></td>

        <td><%= course.workload %></td>
        <td><%= course.difficulty %></td>
        <td><%= course.quality %></td>
        <td><%= course.usefulness %></td>
        <td><%= course.gpa %></td>
        <td><%= course.overall %></td>
        <td><%= course.n_comments %></td>

        <td><%= course.book %></td>
        <td><%= course.url %></td>

        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path, :class=>"btn btn-outline-primary"%>

