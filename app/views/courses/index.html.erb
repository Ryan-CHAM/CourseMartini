<style>
  td{
    white-space: normal !important; 
    word-wrap: break-word; 
  }
  table {
    table-layout: fixed;
  }
</style>
<h1>Courses Database (Administrator's View)</h1>
<div class="text-left">
  <%= link_to 'New Course', new_course_path, :class=>"btn btn-outline-primary"%>
  <%= link_to 'Proposals ', "/proposals", :class=>"btn btn-outline-primary"%>
</div>
<br>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Code</th>
          <th>Name</th>
          <th>Sub</th>
          <th>Faculty</th>
          <th>Prof</th>
          <th>Des</th>
          
          <th>Work</th>
          <th>Diff</th>
          <th>Qual</th>
          <th>Use</th>
          <th>GPA</th>
          <th>All</th>
          <th>Num</th>

          <th>Book</th>
          <th>URL</th>
          <th>Actions</th>

          <%# <th colspan="3"></th> %>
        </tr>
      </thead>

      <tbody>
        <% @courses.reverse.each do |course| %>
          <tr>
            <td><%= course.id %></td>
            <td><%= course.code %></td>
            <td><%= course.name %></td>
            <td><%= course.subject %></td>
            <td><%= course.faculty %></td>
            <td><%= course.instructor %></td>
            <td><%= course.description %></td>

            <td><%= course.workload %></td>
            <td><%= course.difficulty %></td>
            <td><%= course.quality %></td>
            <td><%= course.usefulness %></td>
            <td><%= course.gpa %></td>
            <td><%= course.overall %></td>
            <td><%= course.n_comments %></td>

            <td><%= course.book %></td>
            <td><%= course.url %></td>

            <td>
              <%= link_to 'Show', course, :class=>"btn btn-outline-primary btn-block btn-sm" %>
              <%= link_to 'Edit', edit_course_path(course), :class=>"btn btn-outline-primary btn-block btn-sm" %>
              <%= link_to 'Del', course_path(course), :method => :delete,
                  data: { confirm: 'Are you sure?' }, :class=>"btn btn-outline-danger btn-block btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>


<br><br>
