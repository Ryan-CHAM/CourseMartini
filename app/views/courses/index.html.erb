<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Subject</th>
      <th>Code</th>
      <th>Description</th>
      <th>Workload</th>
      <th>Difficulty</th>
      <th>Quality</th>
      <th>Usefulness</th>
      <th>Overall</th>
      <th>N comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.subject %></td>
        <td><%= course.code %></td>
        <td><%= course.description %></td>
        <td><%= course.workload %></td>
        <td><%= course.difficulty %></td>
        <td><%= course.quality %></td>
        <td><%= course.usefulness %></td>
        <td><%= course.overall %></td>
        <td><%= course.n_comments %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

