<h1>Search</h1>

<%= form_tag search_path, :method => "get" do %>
<%= label_tag(:search, "Search for Your Course:") %>
<%= text_field_tag :search, params[:search] %>
<%= submit_tag("Search", :name => nil)%>
<% end %>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.code %></td>
        <td><%= course.name %></td>
        <td><%= link_to 'Show', course %></td>
      </tr>
    <% end %>
  </tbody>
</table>