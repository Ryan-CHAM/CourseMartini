<h1><%= @course.code %> <%= @course.name %> </h1>

<div class="container">
  <div class="row">
    <div class="col">
      <%# 1 of 3 %>
    </div>
    <div class="col-9">
      <%# 2 of 3 (wider) %>
      <ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Information</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Reviews</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Resources</a>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">

    <p>
      <strong>Subject:</strong>
      <%= @course.subject %>
    </p>

    <p>
      <strong>Faculty:</strong>
      <%= @course.faculty %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @course.description %>
    </p>



   
  
  </div>
  <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
    <p>
      <strong>Workload:</strong>
      <%= @course.workload %>
    </p>

    <p>
      <strong>Difficulty:</strong>
      <%= @course.difficulty %>
    </p>

    <p>
      <strong>Quality:</strong>
      <%= @course.quality %>
    </p>

    <p>
      <strong>Usefulness:</strong>
      <%= @course.usefulness %>
    </p>

    <p>
      <strong>Average GPA:</strong>
      <%= @course.gpa %>
    </p>

    <p>
      <strong>Overall:</strong>
      <%= @course.overall %>
    </p>

    <p>
      <strong>Number of reviews:</strong>
      <%= @course.n_comments %>
    </p>
  
  </div>
  <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">

    <%# <div class="embed-responsive embed-responsive-16by9">
    <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/zpOULjyy-n8?rel=0" allowfullscreen></iframe>
    </div> %>

    <p>
      <strong>Textbook:</strong>
      <%= @course.book %>
    </p>

    <p>
      <strong>Course Website:</strong>
      <%= @course.url %>
    </p>

  
  </div>
</div>

<%= link_to 'Edit', edit_course_path(@course), :class=>"btn btn-outline-primary" %>
<%= link_to 'Back', courses_path, :class=>"btn btn-outline-primary" %>
    </div>
    <div class="col">
      <%# 3 of 3 %>
    </div>
  </div>

</div>







