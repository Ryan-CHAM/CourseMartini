<div class="page-header" style="text-align: center;">
    <br>
    <h1>Sign in</h1><br><br>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">

            <% if alert%>
            <div class="alert alert-danger" role="alert">
                <div>
                    <span class="glyphicon glyphicon-exclamation-sign"></span>
                    <span style="font-weight:bold;">There is something wrong.</span>
                </div>
                <p class="alert"><%= alert %></p>
            </div>
            <%end%>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
            <div class="form-group">
            </div>
            <div class="form-group">
                <label>Email adress</label>
                <%= f.email_field :email, autofocus: true, class: 'form-control' %>
            </div>

            <div class="form-group">
                <label>Password</label>
                <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
            </div>
            <% if devise_mapping.rememberable? -%>
            <label>
                <%= f.check_box :remember_me, label: false %>
                Remember me
            </label>
            <% end -%>
            <%= f.button "Sign in", class: 'btn btn-primary btn-lg btn-block' %>
            <% end %>
            <p>Don't have an account yet? <a href="sign-up">Sign up here!</a></p>
        </div>

    </div>
    <div class="col-md-2"></div>
</div>
</div>