<!--Grey background -->
<% if warning %>
		<div class="alert alert-danger" role="alert">
			<p class="notice"><%= warning %></p>
		</div>
<% end %>
<div class= "bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <div class="col-lg-6 offset-lg-3">
                    <!--Input form -->
                    <div class="user_form" style="margin-top: 100px">
                        <h2 style="margin-bottom:-30px"><strong>Sign In</strong></h2>       
                        <div class="col-lg-8 offset-lg-2">
                            <!--If sign in information is wrong, show the error -->
                            <% if alert%>
                            <div class="alert alert-danger" role="alert">
                                <p class="alert"><%= alert %></p>
                            </div>
                            <%end%>
                            <!--Ruby form below generates authenticity token for security improvement-->
                            <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "new_user"}) do |f| %>
                            <!--Email input-->
                            <div class="form-group">
                                <%= f.text_field :email, class: 'form-control', placeholder: 'Email' %>
                            </div>
                            <!--Password input-->
                            <div class="form-group">
                                <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Password" %>
                            </div>
                            <!--Remember me checkbox-->
                            <label> <%= f.check_box :remember_me, label: false, style:"width:20%" %>  Remember me</label>
                            <!--Sign in button-->
                            <%= f.button "Sign in", class: 'btn btn-primary btn-lg btn-block' %>
                            <!--Password reset link-->
                            <%= link_to "Forgot your password?", new_password_path(resource_name) %><br>
                            <br><br><br><br>
                            <%end%>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
