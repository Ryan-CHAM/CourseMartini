      ['ACCT2111', 4.0, 2, 'Faculty of Business Administration', 4.5],
      ['MATH1050', 2.0, 1.7, 'Faculty of Science', 3.6],
      ['STAT2006', 1.9, 4.77, 'Faculty of Science', 3.5],
      ['MATH1010', 4.2, 2.96, 'Faculty of Science', 3.8],
      ['MGNT1020', 1.8, 1.54, 'Faculty of Business Administration', 3.5],
      ['CSCI2100', 0.7, 2.05, 'Falcuty of Engineering', 4],
      ['MATH100', 4.4, 4.55, 'Faculty of Science', 3.3],
      ['MATH1010', 4.7, 1.5, 'Faculty of Science', 3.6],
      ['MATH1010', 1.3, 2.5, 'Faculty of Science', 3.8],
      ['MATH1010', 1.5, 3.5, 'Faculty of Science', 4.8],
      ['MATH1010', 3.2, 3.2, 'Faculty of Science', 3.7],
      ['MATH110', 3.5, 2.3, 'Faculty of Science', 3.6],
      ['MATH1', 3.8, 0.9, 'Faculty of Science', 3.2]
    ]);

    var options = {
      title: 'Correlation between TeachingQuality, Overall ' +
        'and workload of courses',
      hAxis: { title: 'workload' },
      vAxis: { title: 'TeachingQuality' },
      bubble: {
        textStyle: {
          fontSize: 12,
          fontName: 'Times-Roman',
          color: 'green',
          bold: true,
          italic: true

        }
      }
    };

    var chart = new google.visualization.BubbleChart(document.getElementById('textstyle'));

    chart.draw(data, options);
  }

</script>
