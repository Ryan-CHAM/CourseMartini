<!-- Cecil Interactive Data Visualization Module-->

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">
  google.charts.load("current", { packages: ["corechart"] });
  google.charts.setOnLoadCallback(drawChart);

  function drawChart() {

    var data = google.visualization.arrayToDataTable(<%= @courses %>);

    var options = {
      title: 'Correlation between TeachingQuality, Overall ' +
        'and workload of courses',
      hAxis: { title: 'workload' },
      vAxis: { title: 'TeachingQuality' },
      bubble: {
        textStyle: {
          fontSize: 12,
          fontName: 'Times-Roman',
          color: 'green',
          bold: true,
          italic: true

        }
      }
    };

    var chart = new google.visualization.BubbleChart(document.getElementById('textstyle'));

    chart.draw(data, options);
  }

</script>
  <div class="row">
      <div id="textstyle" style="width: 1350px; height: 750px;"></div>
  </div>
</div>