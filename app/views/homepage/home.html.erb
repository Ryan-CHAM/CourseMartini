<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">

<!-- Load the visualization API and the bubble chart package-->
  google.charts.load("current", { packages: ["corechart"] });

  <!-- Set a call back to run when the google visualization API is loaded -->
  google.charts.setOnLoadCallback(drawChart);

  <!-- Callback that creates and populates a data table, instantiates the bubble chart, passes in the data and draws it/-->

  function drawChart() {

    var data = google.visualization.arrayToDataTable([
      ['Course', 'workload', 'TeachingQuality', 'Falcuty', 'Overall'],
      ['CSCI3100', 4.9, 1.67, 'Falcuty of Engineering', 5],
      ['DSME1030', 3.6, 1.36, 'Faculty of Business Administration', 3],
      ['DSME1040', 3.5, 1.84, 'Faculty of Business Administration', 3.2],
      ['STAT2006', 2.5, 2.78, 'Faculty of Science', 4],
      ['ACCT2111', 4.0, 2, 'Faculty of Business Administration', 4.5],
      ['MATH1050', 2.0, 1.7, 'Faculty of Science', 3.6],
      ['STAT2006', 1.9, 4.77, 'Faculty of Science', 3.5],
      ['MATH1010', 4.2, 2.96, 'Faculty of Science', 3.8],
      ['MGNT1020', 1.8, 1.54, 'Faculty of Business Administration', 3.5],
      ['CSCI2100', 0.7, 2.05, 'Falcuty of Engineering', 4],
      ['MATH100', 4.4, 4.55, 'Faculty of Science', 3.3],
      ['MATH1010', 4.7, 1.5, 'Faculty of Science', 3.6],
      ['MATH1010', 1.3, 2.5, 'Faculty of Social Science', 3.8],
      ['MATH1010', 1.5, 3.5, 'Faculty of Medicine', 4.8],
      ['MATH1010', 3.2, 3.2, 'Faculty of Law', 3.7],
      ['MATH110', 3.5, 2.3, 'Faculty of Education', 3.6],
      ['MATH1', 3.8, 0.9, 'Faculty of Science', 3.2],
      ['tesing', 3.9, 0.8, 'Faculty of Arts', 3.3]
    ]);

    <!-- Set chart options-->
    var options = {
      title:'Don\'t know what course to choose? Come here and see!',
    
        animation:{
        duration: 2000,
        easing: 'inAndOut',
        startup:true

      },

      hAxis: { title: 'workload' },

      vAxis: { title: 'TeachingQuality' },

      bubble: {
        textStyle: {
          fontSize: 12,
          fontName: 'Times-Roman',
          color: 'green',
          bold: true,
          italic: true

        }
      },

      explorer: {
         maxZoomIn: .5 ,
         maxZoomOut: 8 ,
         keepInBounds: true
      },

      legend:{
        alignment:'center',
        position:'right'
      },

      selectionMode:'multiple',
      
      sortBubblesBySize:true,
    
      tooltip:{
        showColorCode: true
       
      }
    };
   
    <!--Instantiate and draw our chart, passing in some options-->
    var chart = new google.visualization.BubbleChart(document.getElementById('textstyle'));
    chart.draw(data, options);
  }
  

</script>

