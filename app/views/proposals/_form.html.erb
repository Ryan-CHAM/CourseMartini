<%#
    VIEW for proposal form
    PROGRAMMER: Zhou Jinan
    PURPOSE: displays the form related to proposals. It is used in every scenario when a proposal 
             is created or edited. 
%>



<%= form_with(model: proposal, local: true) do |form| %>
  <% if proposal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(proposal.errors.count, "error") %> prohibited this proposal from being saved:</h2>

      <ul>
        <% proposal.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label> Course Code </label>
    <%= form.text_field :code, class: 'form-control' %>
  </div>

  <div class="field">
    <label> Course Name </label>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="field">
    <label> Subject </label>
    <%= form.text_field :subject, class: 'form-control' %>
  </div>

  <div class="field">
    <label> Faculty </label>
    <%= form.text_field :faculty, class: 'form-control' %>
  </div>

  <div class="field">
    <label> Instructor </label>
    <%= form.text_field :instructor, class: 'form-control' %>
  </div>

  <div class="field">
    <label> Description </label>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="field">
    <label> TextBook(s) </label>
    <%= form.text_area :book, class: 'form-control' %>
  </div>

  <div class="field">
    <label> Course Website </label>
    <%= form.text_area :url, class: 'form-control' %>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
  <p></p>

<% end %>
